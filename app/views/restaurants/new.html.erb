<form action="/restaurants" method="post">
  <label for="name">Name: </label>
  <input type="text" name="restaurant[name]" id="name">

  <label for="address">Address: </label>
  <input type="text" name="restaurant[address]" id="address">

  <input type="submit">
</form>

<!-- same as the rails helper below -->

<%= form_for(@restaurant) do |f| %>
  <%= f.label :name, "Enter a name" %>
  <%= f.text_field :name %>

  <%= f.label :address, "Enter an address" %>
  <%= f.text_field :address %>

  <%= f.submit %>
<% end %>

<!-- same as everything else above -->

<%= render 'form' %>
